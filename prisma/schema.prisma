datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Account {
  id      Int      @id @default(autoincrement())
  fisrtName String?
  lastName  String?
  email String   @unique
  logements Logement[]
}

model PropertyType {
  id   Int    @id @default(autoincrement())
  type String @unique
  logements   Logement[]
}

model LogementType {
  id   Int    @id @default(autoincrement())
  type String @unique
  logements   Logement[]
}

model Logement {
  id                   Int          @id @default(autoincrement())
  draft                Boolean?
  displayPreciseAddress Boolean?
  postalCode    Int?
  city String?
  street  String?
  numero Int?
  addressComplement String?
  stopProcess          String?
  superficie           Int?
  roomNumber           Int?
  bedroomNumber        Int?
  furnished            Boolean?
  bathRoomSpace        Int?
  powderRoomSpace      Int?
  appartmentFloor      Int?
  kWhEP                Int?
  kgCO2                Int?
  accountId            Int?
  propertyTypeId       Int?
  logementTypeId       Int?
  account              Account?     @relation(fields: [accountId], references: [id])
  propertyType         PropertyType? @relation(fields: [propertyTypeId], references: [id])
  logementType         LogementType? @relation(fields: [logementTypeId], references: [id])
  roomAreas            RoomArea[]
  spaceShares          SpaceShare[]
}

model RoomArea {
  id        Int       @id @default(autoincrement())
  area      Int?
  logement  Logement? @relation(fields: [logementId], references: [id])
  logementId Int?
}

model SpaceShare {
  id        Int       @id @default(autoincrement())
  type      String?
  logement  Logement? @relation(fields: [logementId], references: [id])
  logementId Int?
}